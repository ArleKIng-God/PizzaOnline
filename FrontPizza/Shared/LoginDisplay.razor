@using Microsoft.AspNetCore.Authorization
<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <a href="/account">account</a>
        <a href="/logout">Log out</a>
    </Authorized>
    <NotAuthorized>
        <a href="/register">Register</a>
        <a href="/login">Login</a>
    </NotAuthorized>
</AuthorizeView>
